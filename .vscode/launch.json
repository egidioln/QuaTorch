{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Documentation",
            "type": "debugpy",
            "request": "launch",
            "module": "sphinx_autobuild",
            "args": [
                "docs/source",
                "docs/_build/html",
                "--host",
                "localhost",
                "--port",
                "8000",
                "--open-browser"
            ],
        },
        {
            "name": "Tests",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "-s",
                "-v",
                "tests"
            ],
            "justMyCode": false,
            "purpose": [
                "debug-test"
            ],
            "env": {
                "TORCHDYNAMO_VERBOSE": "1",
                "TORCH_LOGS": "+all"
            }
        }
    ]
}